<% include partials/header %>
    <div class="ui main text container segment showContainer">
      <div class="ui huge header">
        New Blog
      </div>
      <form class="ui form"action="/blogs" method="POST">
        <div class="field">
          <label>Title</label>
          <input required type="text" name="blog[title]"  placeholder="title">
        </div>
        <div class="field">
          <label>Image</label>
          <input required type="text" name="blog[image]"  placeholder="image">
        </div>
        <div class="field">
          <label>Body Content</label>
          <textarea required name="blog[body]"></textarea>
        </div>
        <!--<input type="submit">-->
       <button class="ui brown  basic button" type="submit">Submit</button>
      </form>
    </div>
<% include partials/footer %>